<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="Style.css" asp-append-version="true">
    <title>MiMascota</title>
</head>

<body>
    <header class="index">
        <div class="logo">
            <img src="\img\pata.png" alt="Logo Pata de Perro">
            <a  class = "linkMiMascota" href='@Url.Action("C_Inicio", new {IdMascota = @ViewBag.Mascota.IdMascota})'><h2>MiMascota</h2></a>
        </div>
        <nav class="inicio">
            <a href='@Url.Action("C_Agenda", new {IdMascota = @ViewBag.Mascota.IdMascota})'><img src="\img\calendario1.png"></a>
            <a href='@Url.Action("C_Perfil", new {IdMascota = @ViewBag.Mascota.IdMascota})'><img src="\img\mascotas\@ViewBag.Mascota.Foto "></a>
        </nav>

    </header>

<br><h1>Historia Cl√≠nica</h1>
    @foreach (Antecedente Antecedente in ViewBag.Antecedentes)
        {
            <div class="content-container">
                <div class="content2">
                    <p>@Antecedente.Info</p><br>
                    <p>@Antecedente.Fecha.ToShortDateString()</p><br>
                    <h3>@Antecedente.Lugar</h3><br>
            
                <a  class = "botonPrimario" href='@Url.Action("C_EliminarAntecedente", new { IdAntecedente = @Antecedente.IdAntecedente, IdMascota = @Antecedente.IdMascota})'>Eliminar Antecedente</a>

                </div>
            </div>

        }

<button type="button" id="agregar"class="btn btn-light" data-bs-toggle="modal" data-bs-target="#ModalAntecedente">Cargar Antecedente</button>
                        
            <!-- Modal Antecedente -->

        <div class="modal fade" id="ModalAntecedente" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="Titulo"></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
            <div class="modal-body" id="Cuerpo">
                <form method="post" action = '@Url.Action("C_AgregarAntecedente")'>
                    <input name="pagina" type="hidden" value="Antecedente" />
                    <input name="IdMascota" type="hidden" value="@ViewBag.Mascota.IdMascota" />
                    <input class="largo" type="text" name = "Lugar" placeholder="Lugar" required><br><br>
                    <p>Fecha</p>
                    <input class="largo" type="date" name = "Fecha" placeholder="Fecha" required><br><br>
                    <input class="largo" type="text" name = "Info" placeholder="Tipo" required><br><br>

                    <input class="botonPrimario" type="submit" value="Guardar"><br><br><br>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
            </div>
        </div>
        </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
</body>

</html>



