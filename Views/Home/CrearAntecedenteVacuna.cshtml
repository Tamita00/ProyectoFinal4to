<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="Style.css">
    <title>MiMascota</title>
</head>

<body>
<a href='@Url.Action("Index")'><img class="volver" src="\img\volver.png"></a><br>
    <div class="contenedor">
        <div class="info">
            <br><br>
            <form method="post" action = '@Url.Action("Index")'>
            <input id="IdMascota" name="IdMascota" type="hidden" value="@ViewBag.IdMascota">
            <img class = "fotoMascota" src="\img\mascotas\@ViewBag.DatosPersonales.Foto"><br><br>
            <p>Nombre: @ViewBag.DatosPersonales.Nombre</p>
            <p>Tipo de Mascota: @ViewBag.DatosPersonales.TipoMascota</p>
            <p>GÃ©nero: @ViewBag.DatosPersonales.Genero</p>
            <p>Raza: @ViewBag.DatosPersonales.Raza</p>
            <p>Fecha de Nacimiento: @ViewBag.DatosPersonales.FechaNacimiento.ToShortDateString()</p>

            <button type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#ModalAntecedente">Cargar Antecedente</button><br><br>
            <button type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#ModalVacuna">Cargar Vacuna</button><br><br><br>
            
            <input type = 'Submit' role="button" value = 'Siguiente' id="submit" name="submit"><br><br>
        </form>  
        
            <!-- Modal Antecedente -->

            <div class="modal fade" id="ModalAntecedente" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="Titulo"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="Cuerpo">
                     <form method="post" action = '@Url.Action("C_AgregarAntecedente")'>
                        <input name="pagina" type="hidden" value="CrearAntecedenteVacuna" />
                        <input id="IdMascota" name="IdMascota" type="hidden" value="@ViewBag.Mascota.IdMascota">
                        <input class="largo" name = "Lugar" type="text" placeholder="Lugar" required><br>
                        <p>Fecha</p>
                        <input class="largo" type="date" name = "Fecha" placeholder="Fecha" required><br>
                        <input class="largo" type="text" name = "Info" placeholder="Tipo" required> <br>

                        <input class="botonPrimario" type="submit" value="Guardar"><br><br><br>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
                </div>
            </div>
            </div>
            <!-- Modal Vacuna  -->

            <div class="modal fade" id="ModalVacuna" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="Titulo"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="Cuerpo">
                     <form method="post" action = '@Url.Action("C_CrearVacuna")'>
                        <input name="pagina" type="hidden" value="CrearAntecedenteVacuna" />
                        <input id="IdMascota" name="IdMascota" type="hidden" value="@ViewBag.Mascota.IdMascota">
                        <input class="largo" type="text" name = "Tipo" placeholder="Tipo" required> 
                        <p>Fecha de la primera vacuna</p>
                        <input class="largo" type="date" name = "fecha1" required><br>
                        <p>Fecha de la segunda vacuna/Caducacion +</p>
                        <input class="largo" type="date" name = "fecha10"><br><br>

                        <input class="botonPrimario" type="submit" value="Guardar"><br><br><br>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
                </div>
            </div>
            </div>

         
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    </div>
</body>

</html>