<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="Style.css">
    <title>MiMascota</title>
</head>

<body>
    <a href="SinLogear.html"><img class="volver" src="img/volver.webp"></a><br>
    <div class="contenedor">
        <div class="input">
            <img class="sinLoguear" src="img/icono.png"><br>
            <form method = "post" action= '@Url.Action("C_ElegirMascota")'>
            <div class="mascotas">

            @foreach (Mascota mascota in ViewBag.Mascotas)
            {
                <a href='@Url.Action("C_Inicio", new {IdMascota = @mascota.IdMascota})'>
                    <img src = "/Img/@mascota.Foto" alt ="Foto mascota" width = "300px">  
                </a>
            }
            
            </div>
            </form>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    </div>
</body>

</html>